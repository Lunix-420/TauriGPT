{
  "build": {
    "devPath": "../dist",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "TauriGPT",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "rpm", "msi", "app", "dmg"],
      "identifier": "com.github.lunix420.taurigpt",
      "icon": ["icons/icon.png"]
    }
  }
}
